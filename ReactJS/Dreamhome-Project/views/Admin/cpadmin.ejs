            <div class="form-group">
              <!-- <label for="pwd">Password : </label> -->
              <input type="password" class="form-control" placeholder="Enter New Password" id="npass" name="npass" />
            </div>
            <div class="form-group">
              <!-- <label for="pwd">Password : </label> -->
              <input type="password" class="form-control" placeholder="Confirm New Password" id="cnpass" name="cnpass" />
            </div>

            <button class="btn btn-primary px-4">Submit Form</button><br />
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
