  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-3 col-md-3"></div>
      <div class="col-lg-6 col-md-6 form-bg">
        <div class="about-text">
          <h3>Reset Password Here!!!</h3>
          <br />
          <font style="color: rgb(8, 8, 255)">
            <%- output %>
          </font>
          <form method="post" action="/admin/cpadmin">
